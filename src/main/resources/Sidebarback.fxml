<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.SidebarbackController" prefWidth="220"
            style="-fx-background-color: #2A2A72;"> <!-- fond bleu -->
 <VBox spacing="10" style="-fx-padding: 10;">
  <TextField fx:id="NomUtilisateur" promptText="Utilisateur" editable="false"
             style="-fx-background-color: #3C3F91; -fx-text-fill: white;" />
  <ImageView fitWidth="160" fitHeight="160" preserveRatio="true">
   <image>
    <Image url="@images/transport.png" />
   </image>
  </ImageView>


  <Button fx:id="Utilisateurs" text="Utilisateurs" onAction="#Naviguer_a_Utilisateurs"
          onMouseEntered="#UsersChangeStyleEntered" onMouseExited="#UsersChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />

  <Button fx:id="Covoiturages" text="Covoiturages" onAction="#Naviguer_a_Covoiturages"
          onMouseEntered="#EventsChangeStyleEntered" onMouseExited="#EventsChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />

  <Button fx:id="Reservations" text="Réservations" onAction="#Naviguer_a_Reservations"
          onMouseEntered="#EventsChangeStyleEntered" onMouseExited="#EventsChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />

  <Button fx:id="Paiements" text="Paiements" onAction="#Naviguer_a_Paiements"
          onMouseEntered="#EventsChangeStyleEntered" onMouseExited="#EventsChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />

  <Button fx:id="Avis" text="Avis" onAction="#Naviguer_a_Avis"
          onMouseEntered="#EventsChangeStyleEntered" onMouseExited="#EventsChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />

  <Button fx:id="Notifications" text="Notifications" onAction="#Naviguer_a_Notifications"
          onMouseEntered="#EventsChangeStyleEntered" onMouseExited="#EventsChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />

  <Button fx:id="Voitures" text="Voitures" onAction="#Naviguer_a_Voitures"
          onMouseEntered="#EventsChangeStyleEntered" onMouseExited="#EventsChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />

  <Button fx:id="LogOutBack" text="Déconnexion" onAction="#Naviguer_a_login"
          onMouseEntered="#LogOutChangeStyleEntered" onMouseExited="#LogOutChangeStyleExited"
          style="-fx-background-color: #3C3F91; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 210; -fx-pref-height: 55; -fx-background-radius: 15; -fx-font-weight: bold;" />
 </VBox>
</AnchorPane>
