<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainMenuController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@styles/application.css">
    <top>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
            <Label text="Application de Covoiturage" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            <Label text="Gérez vos voitures et trajets facilement" style="-fx-font-size: 14;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 30;">
            <Button text="Gestion des Voitures" onAction="#handleGestionVoitures"
                    prefWidth="250" prefHeight="60"
                    style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <Button text="Gestion des Trajets" onAction="#handleGestionTrajets"
                    prefWidth="250" prefHeight="60"
                    style="-fx-font-size: 16; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Label text="© 2025 Application de Covoiturage" style="-fx-font-style: italic;"/>
        </HBox>
    </bottom>
</BorderPane>
