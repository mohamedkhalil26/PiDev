<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@styles/chat.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.ChatController">
    <TextArea fx:id="chatArea" editable="false" prefHeight="400" prefWidth="500" wrapText="true" />
    <TextField fx:id="messageInput" prefWidth="400" promptText="Type your message here" />
    <Button fx:id="sendButton" onAction="#sendMessage" text="Envoyer" />
</VBox>
