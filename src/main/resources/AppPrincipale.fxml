<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AppPrincipaleController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@styles/application.css">
    <top>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <Label text="Application de Covoiturage" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            <Label text="Gérez vos voitures et trajets facilement" style="-fx-font-size: 14;"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="btnVoitures" text="Voitures" onAction="#handleAfficherVoitures" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 15;"/>
                <Button fx:id="btnTrajets" text="Trajets" onAction="#handleAfficherTrajets" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 15;"/>
                <Button fx:id="btnEmpreinte" text="Empreinte Carbone" onAction="#handleAfficherEmpreinte" 
                        style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 15;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <StackPane>
            <!-- Section Voitures -->
            <BorderPane fx:id="sectionVoitures">
                <top>
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #e8f5e9; -fx-padding: 10;">
                        <Label fx:id="lblTitreVoitures" text="Gestion des Voitures" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnRetourListeVoitures" text="Retour à la liste" onAction="#handleRetourListeVoitures" visible="false"/>
                        <Button fx:id="btnAjouterVoiture" text="Ajouter une voiture" onAction="#handleAjouterVoiture"/>
                    </HBox>
                </top>
                
                <center>
                    <StackPane>
                        <!-- Vue Liste des Voitures -->
                        <VBox fx:id="panelListeVoitures" spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Rechercher:"/>
                                <TextField fx:id="txtRechercheVoiture" prefWidth="200"/>
                                <Button text="Rechercher" onAction="#handleRechercheVoiture"/>
                                <Button text="Réinitialiser" onAction="#handleReinitialiserRechercheVoiture"/>
                            </HBox>

                            <TableView fx:id="tableVoitures" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colIdVoiture" text="ID" prefWidth="50"/>
                                    <TableColumn fx:id="colUtilisateurId" text="ID Utilisateur" prefWidth="100"/>
                                    <TableColumn fx:id="colNbPlaces" text="Places" prefWidth="80"/>
                                    <TableColumn fx:id="colCouleur" text="Couleur" prefWidth="100"/>
                                    <TableColumn fx:id="colTypeVoiture" text="Type" prefWidth="120"/>
                                    <TableColumn fx:id="colCategorie" text="Catégorie" prefWidth="120"/>
                                    <TableColumn fx:id="colTypeCarburant" text="Carburant" prefWidth="100"/>
                                    <TableColumn fx:id="colActionsVoiture" text="Actions" prefWidth="150"/>
                                </columns>
                            </TableView>

                            <Label fx:id="lblStatusVoiture" text="Nombre de voitures: 0"/>
                        </VBox>

                        <!-- Vue Ajouter Voiture -->
                        <VBox fx:id="panelAjouterVoiture" spacing="10" style="-fx-padding: 20;" visible="false">
                            <GridPane hgap="10" vgap="10">
                                <padding>
                                    <Insets top="20" right="20" bottom="20" left="20"/>
                                </padding>

                                <Label text="Utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <ComboBox fx:id="cmbUtilisateur" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="150"/>

                                <Label text="Nombre de Places:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="txtNbPlaces" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                <Label text="Couleur:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <TextField fx:id="txtCouleur" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                <Label text="Type de Voiture:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <ComboBox fx:id="cmbTypeVoiture" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Berline"/>
                                            <String fx:value="SUV"/>
                                            <String fx:value="Coupé"/>
                                            <String fx:value="Cabriolet"/>
                                            <String fx:value="Monospace"/>
                                            <String fx:value="Citadine"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>

                                <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <ComboBox fx:id="cmbCategorie" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Confort"/>
                                            <String fx:value="Économique"/>
                                            <String fx:value="Luxe"/>
                                            <String fx:value="Familiale"/>
                                            <String fx:value="Sport"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>

                                <Label text="Type de carburant:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                <ComboBox fx:id="cmbTypeCarburant" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="essence"/>
                                            <String fx:value="diesel"/>
                                            <String fx:value="hybride"/>
                                            <String fx:value="electrique"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </GridPane>

                            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                                <Button fx:id="btnAnnulerAjoutVoiture" text="Annuler" onAction="#handleAnnulerAjoutVoiture"/>
                                <Button fx:id="btnEnregistrerAjoutVoiture" text="Enregistrer" onAction="#handleEnregistrerAjoutVoiture" 
                                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                            </HBox>
                        </VBox>

                        <!-- Vue Modifier Voiture -->
                        <VBox fx:id="panelModifierVoiture" spacing="10" style="-fx-padding: 20;" visible="false">
                            <GridPane hgap="10" vgap="10">
                                <padding>
                                    <Insets top="20" right="20" bottom="20" left="20"/>
                                </padding>

                                <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <TextField fx:id="txtIdModifVoiture" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false"/>

                                <Label text="ID Utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="txtUtilisateurIdModif" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"/>

                                <Label text="Nombre de Places:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <TextField fx:id="txtNbPlacesModif" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                <Label text="Couleur:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <TextField fx:id="txtCouleurModif" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                <Label text="Type de Voiture:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <ComboBox fx:id="cmbTypeVoitureModif" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Berline"/>
                                            <String fx:value="SUV"/>
                                            <String fx:value="Coupé"/>
                                            <String fx:value="Cabriolet"/>
                                            <String fx:value="Monospace"/>
                                            <String fx:value="Citadine"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>

                                <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                <ComboBox fx:id="cmbCategorieModif" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Confort"/>
                                            <String fx:value="Économique"/>
                                            <String fx:value="Luxe"/>
                                            <String fx:value="Familiale"/>
                                            <String fx:value="Sport"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>

                                <Label text="Type de carburant:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                                <ComboBox fx:id="cmbTypeCarburantModif" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="essence"/>
                                            <String fx:value="diesel"/>
                                            <String fx:value="hybride"/>
                                            <String fx:value="electrique"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </GridPane>

                            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                                <Button fx:id="btnAnnulerModifVoiture" text="Annuler" onAction="#handleAnnulerModifVoiture"/>
                                <Button fx:id="btnEnregistrerModifVoiture" text="Enregistrer" onAction="#handleEnregistrerModifVoiture" 
                                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                            </HBox>
                        </VBox>

                        <!-- Vue Afficher Voiture -->
                        <VBox fx:id="panelAfficherVoiture" spacing="20" style="-fx-padding: 20;" visible="false">
                            <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
                                <padding>
                                    <Insets top="20" right="20" bottom="20" left="20"/>
                                </padding>

                                <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblIdAfficherVoiture" text="--" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                <Label text="ID Utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblUtilisateurIdAfficher" text="--" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                <Label text="Nombre de Places:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblNbPlacesAfficher" text="--" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                <Label text="Couleur:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblCouleurAfficher" text="--" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                <Label text="Type de Voiture:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblTypeVoitureAfficher" text="--" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                                <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblCategorieAfficher" text="--" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                                <Label text="Type de carburant:" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-font-weight: bold;"/>
                                <Label fx:id="lblTypeCarburantAfficher" text="--" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                            </GridPane>
                            
                            <!-- Section Email API -->
                            <VBox style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-border-radius: 5;">
                                <Label text="Notifications par Email" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                                
                                <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                                    <Label text="Email de destination:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="txtEmail" promptText="Entrez l'adresse email" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                    
                                    <Label text="Type de notification:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                                    <ComboBox fx:id="cmbTypeNotification" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Confirmation de réservation"/>
                                                <String fx:value="Rappel avant départ"/>
                                                <String fx:value="Notification d'entretien"/>
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                    
                                    <Button fx:id="btnEnvoyerEmail" text="Envoyer Email Test" onAction="#handleEnvoyerEmail" 
                                            style="-fx-background-color: #2196F3; -fx-text-fill: white;" 
                                            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    
                                    <Label fx:id="lblStatusEmail" text="" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
                                </GridPane>
                                
                                <Label text="Historique des emails" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 5 0 0 0;"/>
                                <ListView fx:id="listViewEmails" prefHeight="100" VBox.vgrow="ALWAYS"/>
                            </VBox>

                            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                                <Button fx:id="btnModifierAfficherVoiture" text="Modifier" onAction="#handleModifierDepuisAfficherVoiture"/>
                                <Button fx:id="btnSupprimerAfficherVoiture" text="Supprimer" onAction="#handleSupprimerDepuisAfficherVoiture" 
                                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                                <Button fx:id="btnRetourAfficherVoiture" text="Retour" onAction="#handleRetourListeVoitures"/>
                            </HBox>
                        </VBox>
                    </StackPane>
                </center>
            </BorderPane>
            
            <!-- Section Trajets -->
            <BorderPane fx:id="sectionTrajets" visible="false">
                <top>
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #e3f2fd; -fx-padding: 10;">
                        <Label text="Gestion des Trajets" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnAjouterTrajet" text="Ajouter un trajet" onAction="#handleAjouterTrajet" 
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    </HBox>
                </top>
                
                <center>
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Filtrer par:"/>
                            <Label text="Départ:"/>
                            <TextField fx:id="txtFiltreDepart" prefWidth="120"/>
                            <Label text="Arrivée:"/>
                            <TextField fx:id="txtFiltreArrivee" prefWidth="120"/>
                            <Button text="Appliquer" onAction="#handleFiltrerTrajets"/>
                            <Button text="Réinitialiser" onAction="#handleReinitialiserFiltresTrajets"/>
                        </HBox>
                        
                        <TableView fx:id="tableTrajets" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdTrajet" text="ID" prefWidth="40"/>
                                <TableColumn fx:id="colVilleDepart" text="Départ" prefWidth="100"/>
                                <TableColumn fx:id="colVilleArrivee" text="Arrivée" prefWidth="100"/>
                                <TableColumn fx:id="colDateHeure" text="Date/Heure" prefWidth="150"/>
                                <TableColumn fx:id="colPlaces" text="Places" prefWidth="60"/>
                                <TableColumn fx:id="colPrix" text="Prix" prefWidth="80"/>
                                <TableColumn fx:id="colStatut" text="Statut" prefWidth="100"/>
                                <TableColumn fx:id="colActionsTrajet" text="Actions" prefWidth="150"/>
                            </columns>
                        </TableView>
                        
                        <Label fx:id="lblStatusTrajet" text="Nombre de trajets: 0"/>
                    </VBox>
                </center>
            </BorderPane>
            
            <!-- Section Empreinte Carbone -->
            <BorderPane fx:id="sectionEmpreinte" visible="false">
                <top>
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #e0f2f1; -fx-padding: 10;">
                        <Label text="Empreinte Carbone" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    </HBox>
                </top>
                
                <center>
                    <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
                        <VBox spacing="15" style="-fx-padding: 15;">
                            <TitledPane text="Sélection du trajet" expanded="true">
                                <VBox spacing="10">
                                    <HBox spacing="10" alignment="CENTER_LEFT">
                                        <Label text="Trajet:" />
                                        <ComboBox fx:id="cmbTrajetsEmpreinte" prefWidth="250" />
                                    </HBox>
                                    <Button fx:id="btnCalculerEmpreinte" text="Calculer l'empreinte carbone" 
                                            onAction="#handleCalculerEmpreinte" 
                                            style="-fx-background-color: #009688; -fx-text-fill: white;"/>
                                </VBox>
                            </TitledPane>
                            
                            <TitledPane text="Simulation personnalisée" expanded="true">
                                <GridPane hgap="10" vgap="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    
                                    <Label text="Distance (km):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                    <TextField fx:id="txtDistanceEmpreinte" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                    
                                    <Label text="Type de véhicule:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                    <ComboBox fx:id="cmbTypeVehiculeEmpreinte" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Berline"/>
                                                <String fx:value="SUV"/>
                                                <String fx:value="Citadine"/>
                                                <String fx:value="Monospace"/>
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                    
                                    <Label text="Type de carburant:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                    <ComboBox fx:id="cmbTypeCarburantEmpreinte" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="essence"/>
                                                <String fx:value="diesel"/>
                                                <String fx:value="hybride"/>
                                                <String fx:value="electrique"/>
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                    
                                    <Label text="Nombre de passagers:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                    <Spinner fx:id="spnNbPassagersEmpreinte" min="1" max="8" initialValue="1" 
                                             GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                    
                                    <Button fx:id="btnSimulerEmpreinte" text="Simuler" onAction="#handleSimulerEmpreinte" 
                                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                                            GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                </GridPane>
                            </TitledPane>
                        </VBox>
                        
                        <VBox spacing="15" style="-fx-padding: 15;">
                            <TitledPane text="Résultats" expanded="true">
                                <VBox spacing="10">
                                    <GridPane hgap="10" vgap="10" styleClass="result-grid">
                                        <padding>
                                            <Insets top="10" right="10" bottom="10" left="10"/>
                                        </padding>
                                        
                                        <Label text="Émissions totales:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <Label fx:id="lblEmissionsTotales" text="0 kg CO2" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        
                                        <Label text="Émissions par personne:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <Label fx:id="lblEmissionsParPersonne" text="0 kg CO2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        
                                        <Label text="Émissions par km:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <Label fx:id="lblEmissionsParKm" text="0 kg CO2/km" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        
                                        <Label text="Équivalent en arbres:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                        <Label fx:id="lblEquivalentArbres" text="0 arbres" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                        
                                        <Label text="Économies CO2:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                        <Label fx:id="lblEconomies" text="0 kg CO2" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                        
                                        <Label text="Économies (%):" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                        <Label fx:id="lblEconomiesPct" text="0%" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                                    </GridPane>
                                </VBox>
                            </TitledPane>
                        </VBox>
                    </SplitPane>
                </center>
            </BorderPane>
        </StackPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
            <Label text="© 2025 Application de Covoiturage" style="-fx-font-style: italic;"/>
        </HBox>
    </bottom>
</BorderPane>
