<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import java.time.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AjouterTrajetController"
            prefHeight="550.0" prefWidth="600.0"
            stylesheets="@styles/application.css">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Ajouter un Trajet" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <GridPane hgap="10" vgap="15" style="-fx-padding: 20;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Ville de départ:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtVilleDepart" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Ville d'arrivée:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="txtVilleArrivee" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Date de départ:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <DatePicker fx:id="dateDepart" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Heure de départ:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <ComboBox fx:id="cmbHeure" prefWidth="80">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="00"/>
                                <String fx:value="01"/>
                                <String fx:value="02"/>
                                <String fx:value="03"/>
                                <String fx:value="04"/>
                                <String fx:value="05"/>
                                <String fx:value="06"/>
                                <String fx:value="07"/>
                                <String fx:value="08"/>
                                <String fx:value="09"/>
                                <String fx:value="10"/>
                                <String fx:value="11"/>
                                <String fx:value="12"/>
                                <String fx:value="13"/>
                                <String fx:value="14"/>
                                <String fx:value="15"/>
                                <String fx:value="16"/>
                                <String fx:value="17"/>
                                <String fx:value="18"/>
                                <String fx:value="19"/>
                                <String fx:value="20"/>
                                <String fx:value="21"/>
                                <String fx:value="22"/>
                                <String fx:value="23"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Label text="h"/>
                    <ComboBox fx:id="cmbMinute" prefWidth="80">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="00"/>
                                <String fx:value="05"/>
                                <String fx:value="10"/>
                                <String fx:value="15"/>
                                <String fx:value="20"/>
                                <String fx:value="25"/>
                                <String fx:value="30"/>
                                <String fx:value="35"/>
                                <String fx:value="40"/>
                                <String fx:value="45"/>
                                <String fx:value="50"/>
                                <String fx:value="55"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Label text="min"/>
                </HBox>

                <Label text="Nombre de places disponibles:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="txtNbPlaces" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Prix par place (€):" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="txtPrix" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="ID Conducteur:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="txtConducteurId" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Voiture:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <ComboBox fx:id="cmbVoiture" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <ComboBox fx:id="cmbStatut" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="8">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="planifié"/>
                            <String fx:value="en cours"/>
                            <String fx:value="terminé"/>
                            <String fx:value="annulé"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </GridPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button fx:id="btnAnnuler" text="Annuler" onAction="#handleAnnuler"/>
            <Button fx:id="btnEnregistrer" text="Enregistrer" onAction="#handleEnregistrer" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
